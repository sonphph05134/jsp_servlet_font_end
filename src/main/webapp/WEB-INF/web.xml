<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.LoginController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.LogoutController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>IndexController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.IndexController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.ListController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DetaiController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.DetaiController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CartController</servlet-name>
		<servlet-class>io.sonph.assignment.controllers.CartController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>IndexController</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListController</servlet-name>
		<url-pattern>/list</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DetaiController</servlet-name>
		<url-pattern>/detail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CartController</servlet-name>
		<url-pattern>/cart</url-pattern>
	</servlet-mapping>
</web-app>
